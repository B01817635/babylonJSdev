{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "DOM",
            "ES6"
        ],
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noResolve": false,
        "isolatedModules": true,
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}